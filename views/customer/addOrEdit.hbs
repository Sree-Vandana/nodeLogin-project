{{!-- a property will be sent from the customerController '/' route
and that will be displayed hin this <h3></h3> --}}
<h3>{{viewTitle}}</h3>

<form action="/customer" method="POST" autocomplete="off">

    <input type="hidden" name="_id" value="{{customer._id}}">

    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="name" placeholder="Full Name" value="{{customer.name}}"> 
        <div class="text-danger">{{customer.nameError}}</div>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{customer.email}}"> 
        <div class="text-danger">{{customer.emailError}}</div>
    </div>
    
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="password"> 
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/customer/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>